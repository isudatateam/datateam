function gen($ar, $label){
    $s = "";
    foreach($ar as $key => $value)
    {
        $s .= sprintf("<input type=\"checkbox\" value=\"%s\" ".
            "data-%s=\"%s\" name=\"%s[]\" id=\"%s\">".
            "<label for=\"%s\" class=\"control-label\">%s</label>",
            $key, $label, $key, $label, $key, $key, $value);
    }
    return $s;
}

